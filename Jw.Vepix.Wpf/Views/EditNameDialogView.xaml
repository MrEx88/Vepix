<Window x:Class="Jw.Vepix.Wpf.Views.EditNameDialogView"
        x:Name="_this"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jw.Vepix.Wpf.Views"
        xmlns:vm="clr-namespace:Jw.Vepix.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="Edit Picture Name(s)" Height="200" Width="300"
        DataContext="{Binding Source={StaticResource viewModelLocator}, Path=EditNameDialogViewModel}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 20 0 20">
            <StackPanel Margin="0 0 20 0">
                <Label Content="Prefix:" />
                <TextBox Text="{Binding Prefix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="75" />
            </StackPanel>
            <StackPanel>
                <Label Content="Suffix:" />
                <TextBox Text="{Binding Suffix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="75"/>
            </StackPanel>
        </StackPanel>
        <TextBox x:Name="txtInputName"
                 Grid.Row="1"
                 Width="200"
                 Text="{Binding EditPictureName}" />
        <StackPanel Grid.Row="2"
                    HorizontalAlignment="Right" 
                    Orientation="Horizontal"
                    Margin="0 20 10 10">
            <Button Content="Ok"
                    Command="{Binding OkCommand}"
                    CommandParameter="{Binding ElementName=_this}"
                    Margin="0 0 5 0" />
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding ElementName=_this}"
                    Margin="0 0 5 0" />
        </StackPanel>
    </Grid>
</Window>
